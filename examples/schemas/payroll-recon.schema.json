{
  "$id": "payroll-recon",
  "title": "Payroll reconciliation tool contract",
  "input": {
    "type": "object",
    "additionalProperties": false,
    "required": ["period", "accountIds"],
    "properties": {
      "period": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}$",
        "description": "Accounting period in YYYY-MM format"
      },
      "accountIds": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "note": {
        "type": "string"
      },
      "host": {
        "type": "string",
        "format": "uri",
        "description": "Optional override host for demo egress checks"
      }
    }
  },
  "output": {
    "type": "object",
    "additionalProperties": true,
    "required": ["summary", "discrepancies"],
    "properties": {
      "summary": {
        "type": "string"
      },
      "discrepancies": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["accountId", "amount"],
          "properties": {
            "accountId": { "type": "string" },
            "amount": { "type": "number" },
            "note": { "type": "string" }
          }
        }
      }
    }
  }
}
